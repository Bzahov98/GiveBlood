<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@drawable/background">


    <ImageView
        android:src="@drawable/logopomogni"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HelpMeText"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:text="ПОМОГНИ"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#f50808"
        android:textColorHighlight="#c15c5c"
        android:textIsSelectable="false"
        android:textAppearance="@style/AppTheme" />

    <TextView
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:text="@string/reg_pomogni"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:onClick="RegPomogni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/registracia"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>