<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FF851B"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/GiveBloodDescr"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/giveimg"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:src="@drawable/logodari"
        android:paddingTop="21dp" />

    <TextView android:id="@+id/GiveBloodDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Помогни дари кръв, бъди съпричастен или намери по най-бързия начин помощ за теб"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:textSize="20dp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_alignParentRight="false"
        android:paddingTop="111dp" />

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/GiveBloodDescr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="21dp"
        android:id="@+id/mainContent">



        <TextView
            android:id="@+id/CampView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="Вижте когар къде и как да се организират кампании за даряване на кръв"
            android:singleLine="false"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:textSize="13dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кампании"
            android:id="@+id/CampBtn"
            android:gravity="center"
            android:layout_alignBottom="@+id/CampView"
            android:layout_centerHorizontal="true" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:thumbTintMode="multiply"
            android:max="100"
            android:progressDrawable="@drawable/seekbar_progressbar"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:thumb="@drawable/slider"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logopomognimi"
            android:id="@+id/imageView2"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logopomogni"
            android:id="@+id/imageView3"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false" />

    </RelativeLayout>

    </RelativeLayout>