<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FF851B"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="digimark.giveblood.PomogniMii">

    <ImageView
        android:src="@drawable/logopomognimi"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HelpMeText"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:text="ПОМОГНИ МИ"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#f50808"
        android:textColorHighlight="#c15c5c"
        android:textIsSelectable="false"
        android:textAppearance="@style/AppTheme" />

    <TextView
        android:layout_marginTop="240dp"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reg_pomogni_mi"
        android:id="@+id/textView" />

    <ImageButton
        android:onClick="RegPomogniMi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF851B"
        android:src="@drawable/registracia"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>